{
  "version": 2,
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/user(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/book(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/auth(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ]
}
