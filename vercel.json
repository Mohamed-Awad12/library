{
  "version": 2,
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/user(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/book(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/auth(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ]
}
