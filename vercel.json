{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "installCommand": "cd frontend && npm install", "buildCommand": "cd frontend && npm run build", "outputDirectory": "dist" } }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/user(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/book(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/auth(.*)",
      "dest": "/api/index.js"
    },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ]
}
