{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/static-build", 
      "config": { 
        "distDir": "frontend/dist" 
      } 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/user(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/book(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/auth(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/frontend/dist/assets/$1"
    },
    { 
      "src": "/(.*)", 
      "dest": "/frontend/dist/index.html" 
    }
  ]
}
