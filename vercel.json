{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(user|book)(/.*)?", "dest": "/api/index.js" },
    { "src": "/health(/.*)?", "dest": "/api/index.js" },
    { "src": "/test", "dest": "/api/index.js" },
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "/(.*)\.(css|js|png|jpg|jpeg|svg|ico|json|txt|html)", "dest": "/public/$1.$2" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
 