{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    { "src": "/(api|user|book|auth)/(.*)", "dest": "/api/index.js" },
    { "src": "/[^.]*", "dest": "/index.html" }
  ]
}
